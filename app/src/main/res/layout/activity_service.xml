<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    tools:context="com.ma.hololstore.Activity.SelectCardsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أهلا بك محمد العمر "
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/colorPrimary"
                android:layout_margin="3dp"

                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:id="@+id/txt_shop_name"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/colorPrimary"
                android:padding="4dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="4"
                    android:id="@+id/item_category_image"
                    android:scaleType="fitCenter"
                    android:background="@color/white"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:text="التصنيف"
                    android:padding="10dp"
                    android:layout_weight="6"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25dp"
                    android:id="@+id/item_category_name"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أهلا بك محمد العمر "
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:id="@+id/txt_category_desc"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"

                />
            <ListView
                android:layout_width="match_parent"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:layout_below="@id/txt_shop_name"
                android:id="@+id/lst_data"
                android:layout_margin="5dp"
                android:divider="@color/colorAccent"
                android:dividerHeight="3dp"
                android:layout_height="300dp"></ListView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
