<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تأكيد عملية الشراء "
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="3dp"

        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:background="@color/white"
        android:padding="5dp"
        android:weightSum="10"
        android:layout_height="140dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="140dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:id="@+id/item_card_image"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_card_name"
                android:background="@color/white"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/item_card_name"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_card_buyer_price"
                android:layout_width="match_parent"
                android:gravity="center"

                android:layout_height="40dp"
                android:background="@color/white"
                android:padding="7dp"
                android:text="السعر  200 دينار"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:layout_gravity="center_horizontal"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_back"

        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_margin="2dp"
            android:layout_height="40dp"
            android:id="@+id/image_amount_add"
            android:src="@drawable/add"/>


        <TextView
            android:layout_width="90dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="1"
            android:gravity="center"

            android:id="@+id/txt_amount_selected"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_margin="2dp"
            android:layout_height="40dp"
            android:id="@+id/image_amount_minus"
            android:src="@drawable/minus"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_back"

        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="السعر الاجمالي"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="350 دينار"
            android:gravity="center"
            android:id="@+id/txt_amount_money"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:layout_height="60sp">
        <Button
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="5"
            android:id="@+id/bt_buy_card"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="شراء البطاقة"
            />
        <Button
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:layout_weight="5"
            android:textSize="18sp"

            android:id="@+id/bt_cancel_buy_card"
            android:textColor="@color/white"
            android:text="الغاء"
            />

    </LinearLayout>
</LinearLayout>